{
  "compilerOptions": {
    "lib": [
      "es2024",
      "ESNext.Array",
      "ESNext.Collection",
      "ESNext.Iterator",
      "dom",
      "WebWorker"
    ],
    "module": "nodenext",
    "moduleResolution": "nodenext",
    "target": "es2019",
    "outDir": "../build",
    "rootDir": ".",
    "noEmit": false,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "importHelpers": true,
    "noEmitHelpers": true,
    "jsx": "react",
    "typeRoots": ["./node_modules/@types"]
  },
  "include": ["**/*"]
}

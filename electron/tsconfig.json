{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2019",
    "outDir": "../build",
    "rootDir": ".",
    "noEmit": false,
    "allowJs": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react"
  },
  "include": ["./**/*"],
  "exclude": ["./lib"]
}

{
  "name": "megatron",
  "version": "0.1.0",
  "private": true,
  "main": "build/main.js",
  "author": {
    "name": "Jonathan Wheeler",
    "email": "jonathan.wheeler87@gmail.com"
  },
  "description": "A Nextjs and Electron package.",
  "scripts": {
    "contributors": "tsx ./tools/contributors.ts",
    "dev": "concurrently -r -k \"npm run electron:compile\" \"npm run electron:wait\"",
    "electron:wait": "npm run electron:build && npm run electron:watch",
    "electron:build": "tsc -p electron/tsconfig.json",
    "electron:compile": "tsc -p electron/tsconfig.json --preserveWatchOutput -w",
    "electron:watch": "nodemon --watch build --exec electron .",
    "electron:start": "npm run electron:build && electron .",
    "next:build": "next build && tsx scripts/build-next.js",
    "next:dev": "next dev",
    "build": "npm run next:build && npm run electron:build",
    "package": "npm run build && electron-forge package",
    "publish": "npm run build && electron-forge publish",
    "make": "npm run build && electron-forge make",
    "start": "npm run electron:build && cross-env NODE_ENV=production electron .",
    "lint:ts": "eslint \"./**/*.{ts,tsx}\"",
    "lint:js": "eslint \"./**/*.js\"",
    "lint:markdown": "markdownlint-cli2 \"*.md\"",
    "lint:links": "lint-roller-markdown-links --fetch-external-links \"*.md\"",
    "lint:fix": "npm-run-all \"lint:!(fix|links) -- --fix\"",
    "lint": "npm-run-all \"lint:!(fix)\"",
    "electron-releases": "tsx ./tools/fetch-releases.ts",
    "postinstall": "npm run electron-releases"
  },
  "files": [
    "build",
    "app",
    "assets",
    "electron",
    "public",
    "scripts",
    "tools",
    "types",
    ".markdownlint.json",
    "eslint.config.mjs",
    "forge.config.ts",
    "next.config.js",
    "postcss.config.mjs",
    "tsconfig.json"
  ],
  "engines": {
    "node": ">= 22.20.0"
  },
  "license": "MIT",
  "config": {
    "forge": "./forge.config.ts"
  },
  "dependencies": {
    "@electric-sql/pglite": "^0.3.14",
    "@electron/fiddle-core": "^2.0.1",
    "better-auth": "^1.4.7",
    "cookie": "^1.1.1",
    "cross-env": "^10.1.0",
    "disable-devtool": "^0.3.9",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.45.1",
    "electron-log": "^5.4.3",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.6.2",
    "get-port": "^7.1.0",
    "iron-session": "^8.0.4",
    "next": "^16.0.10",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "semver": "^7.7.3",
    "set-cookie-parser": "^2.7.2",
    "tslib": "^2.8.1",
    "update-electron-app": "^3.1.1",
    "uuid": "^13.0.0"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.8.3",
    "@electron-forge/maker-deb": "^7.8.3",
    "@electron-forge/maker-rpm": "^7.8.3",
    "@electron-forge/maker-squirrel": "^7.8.3",
    "@electron-forge/maker-zip": "^7.8.3",
    "@electron-forge/plugin-auto-unpack-natives": "^7.8.3",
    "@electron-forge/plugin-fuses": "^7.8.3",
    "@electron-forge/publisher-github": "^7.8.3",
    "@electron/devtron": "^2.1.1",
    "@electron/fuses": "^1.8.0",
    "@electron/lint-roller": "^3.1.3",
    "@reforged/maker-appimage": "^5.1.1",
    "@tailwindcss/postcss": "^4",
    "@tsconfig/node24": "^24.0.3",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@types/node": "^24.10.1",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/resolve": "^1.20.6",
    "@types/semver": "^7.7.1",
    "@types/set-cookie-parser": "^2.4.10",
    "@vercel/nft": "^1.1.1",
    "concurrently": "^9.2.1",
    "drizzle-kit": "^0.31.8",
    "electron": "^39.2.4",
    "electron-devtools-installer": "^4.0.0",
    "electron-reloader": "^1.2.3",
    "eslint": "^9",
    "eslint-config-next": "^16.0.10",
    "markdownlint-cli2": "^0.19.1",
    "nodemon": "^3.1.11",
    "npm-run-all2": "^8.0.4",
    "react-devtools": "^7.0.1",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5"
  }
}

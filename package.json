{
  "name": "megatron",
  "version": "0.1.0",
  "private": true,
  "main": "build/main.js",
  "author": {
    "name": "Jonathan Wheeler"
  },
  "description": "A Nextjs and Electron package.",
  "scripts": {
    "dev": "concurrently -r -k \"npm run electron:compile\" \"npm run electron:wait\"",
    "electron:wait": "npm run electron:build && npm run electron:watch",
    "electron:build": "tsc -p electron/tsconfig.json",
    "electron:compile": "tsc -p electron/tsconfig.json --preserveWatchOutput -w",
    "electron:watch": "nodemon --watch build --exec electron .",
    "electron:start": "npm run electron:build && electron .",
    "build:next": "next build && tsx scripts/build-next.js",
    "build:electron": "tsc -p electron/tsconfig.json",
    "build": "npm run build:next && npm run build:electron",
    "package": "npm run build && electron-forge package",
    "make": "npm run build && electron-forge make",
    "start": "npm run build:electron && cross-env NODE_ENV=production electron .",
    "lint": "next lint"
  },
  "dependencies": {
    "cookie": "^1.1.1",
    "cross-env": "^10.1.0",
    "electron-squirrel-startup": "^1.0.1",
    "electron-updater": "^6.6.2",
    "get-port": "^7.1.0",
    "iron-session": "^8.0.4",
    "next": "16.0.3",
    "react": "19.2.0",
    "react-dom": "19.2.0",
    "set-cookie-parser": "^2.7.2"
  },
  "devDependencies": {
    "@electron-forge/cli": "^7.10.2",
    "@electron-forge/maker-deb": "^7.10.2",
    "@electron-forge/maker-rpm": "^7.10.2",
    "@electron-forge/maker-squirrel": "^7.10.2",
    "@electron-forge/maker-zip": "^7.10.2",
    "@electron-forge/plugin-auto-unpack-natives": "^7.10.2",
    "@electron-forge/plugin-fuses": "^7.10.2",
    "@electron/fuses": "^1.8.0",
    "@tailwindcss/postcss": "^4",
    "@types/electron-squirrel-startup": "^1.0.2",
    "@types/node": "^24.10.1",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "@types/resolve": "^1.20.6",
    "@types/set-cookie-parser": "^2.4.10",
    "concurrently": "^9.2.1",
    "electron": "^39.2.4",
    "electron-reloader": "^1.2.3",
    "eslint": "^9",
    "eslint-config-next": "16.0.3",
    "nodemon": "^3.1.11",
    "tailwindcss": "^4",
    "tsx": "^4.21.0",
    "typescript": "^5"
  }
}
